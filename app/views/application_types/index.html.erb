<h1>Listing noapplications</h1>

<table>
  <thead>
    <tr>
      <th>No of application</th>
      <th>Path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @application_types.each do |application_type| %>
      <tr>
        <td><%= application_type.no_of_application %></td>
        <td><%= application_type.path %></td>
        <td><%= link_to 'Show', application_type %></td>
        <td><%= link_to 'Edit', edit_application_type_path(application_type) %></td>
        <td><%= link_to 'Destroy', application_type, method: :delete, data: { confirm: 'Are you sure?' } %></td> 

      </tr>
    <% end %>
  </tbody>
</table>

<br>

